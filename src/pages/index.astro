	}

	.small {
		font-size: 0.75em;
		opacity: 0.5;
	}

	footer {
		display: flex;
		justify-content: center;
		gap: 1em;
		margin: 2em 0;
	}

	a {
		color: currentColor;
		&:hover {
			color: var(--color-primary);
		}
	}
